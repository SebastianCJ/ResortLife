<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnHome"
            android:background="@drawable/gray_square"
            android:padding="48dp"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/nombreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnHome"
            android:layout_alignTop="@+id/btnHome"
            android:layout_alignEnd="@+id/btnHome"
            android:layout_alignBottom="@+id/btnHome"
            android:layout_margin="15dp"
            android:gravity="start"
            android:text="911"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/descripcionTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnHome"
            android:layout_alignTop="@+id/btnHome"
            android:layout_alignEnd="@+id/btnHome"
            android:layout_alignBottom="@+id/btnHome"
            android:layout_margin="15dp"
            android:gravity="bottom"
            android:layout_below="@id/nombreTxt"
            android:text="Emergency phone"
            android:textSize="15sp"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>